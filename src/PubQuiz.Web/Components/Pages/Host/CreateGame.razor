@page "/host/create"
@inject GameService GameService
@inject NavigationManager Navigation
@rendermode @(new InteractiveServerRenderMode(prerender: false))

<PageTitle>Create Game - PubQuiz</PageTitle>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            @if (_game == null)
            {
                <div class="text-center mt-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Creating game...</span>
                    </div>
                    <p class="mt-3">Creating your game...</p>
                </div>
            }
            else
            {
                <div class="card shadow mt-5">
                    <div class="card-body p-4 text-center">
                        <h2 class="card-title mb-4">Game Created!</h2>

                        <p class="lead mb-2">Share this code with teams:</p>
                        <div class="display-1 fw-bold text-primary mb-4 font-monospace">
                            @_game.Code
                        </div>

                        <p class="text-muted mb-4">
                            Teams can join at <strong>@_baseUrl</strong>
                        </p>

                        <a href="/host/control/@_game.Code?password=@Uri.EscapeDataString(_password)"
                           class="btn btn-primary btn-lg">
                            Go to Game Control
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery]
    public string Password { get; set; } = string.Empty;

    private Game? _game;
    private string _password = string.Empty;
    private string _baseUrl = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        _password = Password;
        _baseUrl = new Uri(Navigation.Uri).GetLeftPart(UriPartial.Authority);

        if (string.IsNullOrEmpty(_password))
        {
            Navigation.NavigateTo("/host/login");
            return;
        }

        _game = await GameService.CreateGameAsync(_password);
    }
}
