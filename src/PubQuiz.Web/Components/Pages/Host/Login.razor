@page "/host/login"
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Host Login - Pause-Quiz</PageTitle>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow mt-5">
                <div class="card-body p-4">
                    <h2 class="card-title text-center mb-4">Host a Game</h2>

                    <EditForm Model="@_model" OnValidSubmit="CreateGame" FormName="HostLoginForm">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label class="form-label">Game Code (optional)</label>
                            <InputText @bind-Value="_model.GameCode" class="form-control form-control-lg text-center text-uppercase"
                                       maxlength="10" placeholder="Leave empty for random" />
                            <small class="text-muted">Custom code or leave empty for auto-generated.</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Set Host Password</label>
                            <InputText type="password" @bind-Value="_model.Password" class="form-control form-control-lg"
                                       placeholder="Password for game control" />
                            <ValidationMessage For="@(() => _model.Password)" />
                            <small class="text-muted">You'll need this password to control the game.</small>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <InputCheckbox @bind-Value="_model.UsePredefinedTeams" class="form-check-input" id="predefinedTeams" />
                                <label class="form-check-label" for="predefinedTeams">Use predefined teams (Table-1, Table-2, ...)</label>
                            </div>
                        </div>

                        @if (_model.UsePredefinedTeams)
                        {
                            <div class="mb-4">
                                <label class="form-label">Number of Tables</label>
                                <InputNumber @bind-Value="_model.TeamCount" class="form-control" min="1" max="50" />
                            </div>
                        }

                        <button type="submit" class="btn btn-success btn-lg w-100">
                            Create New Game
                        </button>
                    </EditForm>

                    <hr class="my-4" />

                    <p class="text-center text-muted mb-0">
                        <a href="/">Join as a team instead</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private HostLoginModel _model = new();

    private void CreateGame()
    {
        var url = $"/host/create?password={Uri.EscapeDataString(_model.Password)}";
        if (!string.IsNullOrWhiteSpace(_model.GameCode))
        {
            url += $"&code={Uri.EscapeDataString(_model.GameCode)}";
        }
        if (_model.UsePredefinedTeams)
        {
            url += $"&predefinedTeams={_model.TeamCount}";
        }
        Navigation.NavigateTo(url);
    }

    private class HostLoginModel
    {
        public string GameCode { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Password is required")]
        [System.ComponentModel.DataAnnotations.MinLength(4, ErrorMessage = "Password must be at least 4 characters")]
        public string Password { get; set; } = string.Empty;

        public bool UsePredefinedTeams { get; set; }
        public int TeamCount { get; set; } = 10;
    }
}
